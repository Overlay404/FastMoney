<Window x:Class="FastMoney.View.Windows.ScheduleCredit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastMoney.View.Windows"
        mc:Ignorable="d"
        Title="График выплат" Height="450" Width="800">
    <DataGrid Loaded="DataGrid_Loaded" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="200"/>
            <DataGridTextColumn Header="Оплата" Binding="{Binding PartialSum}" Width="200"/>
            <DataGridTextColumn Header="Общая сумма кредита" Binding="{Binding TotalSum}" Width="200"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
