<Page x:Class="FastMoney.View.Pages.CardAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.com/icons/svg"
      xmlns:local="clr-namespace:FastMoney.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CardAddPage">

    <Grid Style="{StaticResource Grid}">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" CornerRadius="50" BorderThickness="5" BorderBrush="Gray" Height="343" Width="438">
            <Grid>
                <fa:ImageAwesome Icon="Solid_CreditCard"/>
                <TextBox x:Name="number" Margin="0 72 0 0" FontSize="45" Height="70" VerticalAlignment="Top" Background="White" Foreground="Black" TextChanged="number_TextChanged"/>
            </Grid>
        </Border>
        <Button Content="Добавить новую карту" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 10" Width="140" Height="30" Click="Button_Click"/>
    </Grid>
</Page>
