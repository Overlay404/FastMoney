<Page x:Class="FastMoney.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.com/icons/svg"
      xmlns:modelview="clr-namespace:FastMoney.ModelView"
      mc:Ignorable="d" 
      d:DesignHeight="533" d:DesignWidth="734"
      Title="MainPage" Loaded="Page_Loaded">
    <Page.DataContext>
        <modelview:MainPageViewModel/>
    </Page.DataContext>

    <Grid Style="{StaticResource Grid}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" 
                VerticalAlignment="Top" CornerRadius="10"
                Style="{StaticResource BorderNavigate}" MinHeight="106">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding GoPage}" CommandParameter="{Binding PayPage}"/>
            </Border.InputBindings>
            <StackPanel Margin="0 25 0 0">
                <fa:ImageAwesome Icon="Solid_Wallet" Width="25" PrimaryColor="#FF4C4C4C"/>
                <TextBlock Text="Платежи" HorizontalAlignment="Center" FontSize="14"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" 
                VerticalAlignment="Top" CornerRadius="10"
                Grid.Column="2" Style="{StaticResource BorderNavigate}"
                 MinHeight="106">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding GoPage}" CommandParameter="{Binding TransferPage}"/>
            </Border.InputBindings>
            <StackPanel Margin="0 25 0 0">
                <fa:ImageAwesome Icon="Solid_RightLeft" Width="25" PrimaryColor="#FF4C4C4C"/>
                <TextBlock Text="Вклады" HorizontalAlignment="Center" FontSize="14"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" 
                VerticalAlignment="Top" CornerRadius="10"
                Grid.Column="5" MinHeight="106"
                Style="{StaticResource BorderNavigate}">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding GoPage}" CommandParameter="{Binding CreditPage}"/>
            </Border.InputBindings>
            <StackPanel Margin="0 25 0 0">
                <fa:ImageAwesome Icon="Solid_CirclePlus" Width="25" PrimaryColor="#FF4C4C4C"/>
                <TextBlock Text="Кредиты" HorizontalAlignment="Center" FontSize="14"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" 
                VerticalAlignment="Bottom" CornerRadius="10"
                Grid.ColumnSpan="5" Height="394"
                Background="White" Padding="10">
            <ScrollViewer>
            <StackPanel>
                    <TextBlock Text="Последние операции" FontSize="14" Margin="0 0 0 10"/>
                    <ItemsControl x:Name="OperationsItemControl">
                        <ItemsControl.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name, StringFormat=D, ConverterCulture=ru}"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ItemsControl.GroupStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <DockPanel>
                                        <StackPanel Margin="10 10 0 10" Orientation="Horizontal" HorizontalAlignment="Left">
                                            <fa:ImageAwesome Icon="{Binding icon}" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <StackPanel Margin="40 0 0 0">
                                                <TextBlock Text="{Binding operation1}" FontSize="14"/>
                                                <TextBlock Text="{Binding type}" FontSize="10" Foreground="#FF545252"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding AmountFormat}" FontSize="12"/>
                                        
                                        </StackPanel>
                                    </DockPanel>
                                    <Separator VerticalAlignment="Bottom"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
