<Page x:Class="FastMoney.View.Pages.TransferPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FastMoney.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransferPage">

    <Grid Style="{StaticResource Grid}">
        <TextBlock Text="Перевод клиенту банка" FontSize="16" Margin="10 10 0 0"/>
        <Border CornerRadius="10" Background="White" BorderBrush="Black" BorderThickness="2" Margin="0 50 0 25" Padding="20 10 20 0">
            <StackPanel>
                <TextBlock Text="Получатель" FontSize="16" FontWeight="Medium" Margin="0 0 0 20"/>
                <TextBlock Text="Номер телефона" FontSize="14"/>
                <TextBox x:Name="number" Background="AntiqueWhite" Margin="0 0 0 20"/>
                <TextBlock Text="Сумма для перевода" FontSize="14"/>
                <TextBox x:Name="amount" Background="AntiqueWhite"/>
                <Button Content="Перевести деньги" Margin="0 150 0 0" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
